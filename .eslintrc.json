{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "standard-with-typescript",
    "overrides": [
    {
      "files": ["tests/*"],
      "env": {
        "jest": true
      }
    }
  ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
  "rules": {
  "import/extensions": [
    "error",
    "ignorePackages",
    {
      "js": "never",
      "mjs": "never",
      "jsx": "never",
      "ts": "never",
      "tsx": "never"
    }
  ]
}

}
